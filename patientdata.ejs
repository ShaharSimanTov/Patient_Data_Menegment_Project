<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Data</title>
    <link href="findPatient.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <a href="javascript:history.back()"><i class="fas fa-arrow-left"></i></a>
    <h1 class="h1">Patient Data:</h1>

    <% if (patients.length === 0) { %>
        <p class="table-data">Patient not found.
            <a href="javascript:history.back()">Go Back</a>
        </p>
    <% } else { %>
        <table class="table-data" border="0">
            <% patients.forEach(function(patient_find) { %>
                <tr>
                    <td>ID: <%= patient_find.ID %></td>
                </tr>
                <tr>
                    <td>Name: <%= patient_find.name %></td>
                </tr>
                <tr>
                    <td>LastName: <%= patient_find.lastName %></td>
                </tr>
                <tr>
                    <td>BirthDate: <%= patient_find.birthDate %></td>
                </tr>
                <tr>
                    <td>Conditions: <%= patient_find.conditions %></td>
                </tr>
            <% }); %>
        </table>
    <% } %>
</body>
</html>
